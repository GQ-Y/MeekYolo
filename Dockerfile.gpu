# 使用支持CUDA的基础镜像
FROM nvidia/cuda:11.8.0-runtime-ubuntu22.04

# 设置工作目录
WORKDIR /app

# 安装Python和系统依赖
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# 复制requirements.txt并安装Python依赖
COPY requirements.txt .
RUN pip3 install -r requirements.txt

# 复制项目文件
COPY . .

# 暴露端口
EXPOSE 8000

# 设置入口点
CMD ["python3", "run.py"] 